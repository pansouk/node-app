extends layouts/main-layout.pug

block styles    
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0 
            .grid
                each product in prods
                   article.card.product-item 
                   header.card__header 
                    h1.product__title  #{product.title}
                        .card__image 
                            img(src="", alt="")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description Lorem ipsum dolor sit amet consectetur, adipisicing elit. Pariatur hic voluptate, iste praesentium facere nihil! Veniam alias aspernatur rerum dolorem, ex velit soluta sit quaerat unde aperiam, pariatur molestiae explicabo!
                        .card__actions 
                            button.btn Add to cart  
        else
        h1 No Products 